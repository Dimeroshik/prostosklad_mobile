<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:src = "@drawable/onboarding_image1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/item_header"
        android:layout_marginBottom="32dp"
        />

    <TextView
        android:id="@+id/item_header"
        style="@style/text_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/item_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        tools:text="Удобно арендуйте\nячейки для своих вещей"
       />

    <TextView
        android:id="@+id/item_text"
        style="@style/text_usability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="29dp"
        app:layout_constraintLeft_toLeftOf="@id/item_header"
        android:layout_marginTop="16dp"
        android:text="Доступ к кладовке и ячейке \nпо одной кнопке"
        />


</androidx.constraintlayout.widget.ConstraintLayout>