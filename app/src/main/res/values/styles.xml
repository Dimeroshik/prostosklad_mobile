<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="button_big" parent="button">
        <item name="cornerRadius">12dp</item>
        <item name="android:padding">17dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    
    <style name="button_dark_big" parent="button_big">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/btn_dark</item>
    </style>

    <style name="text">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/deep_blue</item>
    </style>

    <style name="text_header" parent="text">
        <item name="fontWeight">700</item>
    </style>

    <style name="text_h1" parent="text_header">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="text_h2" parent="text_header">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="text_h3" parent="text_header">
        <item name="android:textSize">22sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="text_h4" parent="text_header">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="text_usability" parent="text">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="text_sfp">
        <item name="fontFamily">@font/sfprodisplay_light</item>
        <item name="android:textColor">#00024A</item>
    </style>

    <style name="text_content_sfp"  parent="text_sfp">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="text_content_sfp_15"  parent="text_sfp">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="text_header_sfp"  parent="text_sfp">
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontWeight">600</item>
    </style>

    <style name="UserBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>